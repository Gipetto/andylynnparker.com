{%- macro gallery(assets) -%}
<ul class="gallery">
    {%- for image in assets.images -%}
      <li class="gallery-item">
        <button class="lightbox{% if image.padding %} pad-lightbox{% endif %}">
          <picture>
            <img src="{{assets.baseDir }}/{{ image.name | url }}" alt="{{ image.description }}" />
          </picture>
          <span>
            <h3>{{ loop.index }}</h3>
          </span>
        </button>
      </li>
    {%- endfor -%}
  </ul>
  <dialog class="lightbox">
    <form method="dialog">
      <button class="sr-only" autofocus formmethod="dialog">
        <span>Close Dialog</span>
      </button>
      <img class="" src="">
    </form>
  </dialog>
{%- endmacro -%}

{%- macro projectsList(projects) -%}
  <ol class="project-list">
    {%- for project in projects | sort(attribute="data.startdate", reverse=true) -%}
      {%- if not project.data.draft -%}
        <li>
          <a href="{{ project.url | url }}">
            <h3>{{ project.data.title }}</h3>
          </a>
        </li>
      {%- endif -%}
    {% endfor -%}
  </ol>
{%- endmacro -%}
